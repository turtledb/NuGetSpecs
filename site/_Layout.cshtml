<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" /> 
    <title>@Page.Title</title>
    <link href="@Href("~/favicon.ico")" rel="shortcut icon" type="image/x-icon" />
    <link href="@Href("~/Content/Site.css")?2013-04-15" rel="stylesheet" type="text/css" />
    <script src="http://ajax.cdnjs.com/ajax/libs/modernizr/1.7/modernizr-1.7.min.js"></script>
    <script src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.5.2.min.js"></script>
    <script src="@Href("~/Scripts/autocolumn.min.js")"></script>
    <script src="@Href("~/Scripts/Helpers.js")"></script>
    @RenderSection("head", required: false)
</head>
<body>
    <div id="content-wraper">
        <header>
            <div id="logo"><a href="@Href("~/")">NuGet Specs</a></div>
        </header>
        <nav>
            <ul id="menu">
                <li><a href="@Href("~/")">Home</a> </li>
                <li><a href="http://docs.nuget.org">NuGet Docs</a></li>
                <li><a href="http://nuget.org">NuGet Gallery</a> </li>
                <li><a href="http://visualstudiogallery.msdn.microsoft.com/27077b70-9dad-4c64-adcf-c7cf6bc9970c">Install NuGet</a></li>
            </ul>
            @RenderPage("~/_searchbox.cshtml")
        </nav>
        <div id="body">
        @RenderBody()
        </div>
    </div>
    <div id="layout-footer" class="group">
        <footer id="footer">
            <div class="copyright">
                <p>
                    <a href="http://outercurve.org"><img src="/images/outercurve.png" style="border-width:0" alt="Outercurve Foundation" /></a>
                </p>
                <p>
                    &copy; 2011-@DateTime.UtcNow.Year Outercurve Foundation
                </p>
            </div>
            <div class="license">
                <p>
                    <a rel="license" href="http://creativecommons.org/licenses/by/3.0/" title="CC BY 3.0">
                    <img alt="Creative Commons License" style="border-width:0" src="http://i.creativecommons.org/l/by/3.0/80x15.png" />
                </a>
                </p>
                <p>
                    Licensed under a <a rel="license" href="http://creativecommons.org/licenses/by/3.0/">Creative Commons Attribution 3.0 Unported License</a> except where otherwise noted.
                </p>
            </div>
            <div class="pagesource">
            @if (Page.Source != null)
            {
                <text>
                View or edit this page's source on GitHub:     
                <a href="https://github.com/NuGet/NuGetSpecs/tree/master/site/@HttpUtility.UrlPathEncode(Page.Source)" target="edit">https://github.com/NuGet/NuGetSpecs/tree/master/site/@HttpUtility.UrlPathEncode(Page.Source)</a>
                </text>
            }
            else
            {
                <text>
                View or edit this site's source on GitHub:
                <a href="https://github.com/NuGet/NuGetSpecs" target="edit">https://github.com/NuGet/NuGetSpecs</a>
                </text>
            }
            </div>
        </footer>
    </div>
</body>
</html>
